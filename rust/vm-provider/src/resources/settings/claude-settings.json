{
	"cleanupPeriodDays": 30,
	"env": {
		"DISABLE_ERROR_REPORTING": "true",
		"DISABLE_TELEMETRY": "true",
		"CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
		"BASH_DEFAULT_TIMEOUT_MS": "30000",
		"MCP_TOOL_TIMEOUT": "300000"
	},
	"includeCoAuthoredBy": true,
	"permissions": {
		"allow": [
			"Read(/workspace/**)",
			"Write(/workspace/**)",
			"Edit(/workspace/**)",
			"MultiEdit(/workspace/**)",
			"WebSearch",
			"WebFetch",
			"Grep(/workspace/**)",
			"Glob(/workspace/**)",
			"LS(/workspace/**)",
			"Bash(git:*)",
			"Bash(pnpm:*)",
			"Bash(npm:*)",
			"Bash(node:*)",
			"Bash(npx:*)",
			"Bash(ls:*)",
			"Bash(pwd)",
			"Bash(which:*)",
			"Bash(cat:*)",
			"Bash(head:*)",
			"Bash(tail:*)",
			"Bash(mkdir:*)",
			"Bash(cp:*)",
			"Bash(mv:*)",
			"Bash(rm:*)"
		],
		"deny": [
			"Bash(rm -rf /*)",
			"Bash(git push --force:*)",
			"Bash(git reset:*)",
			"Bash(git revert:*)",
			"Bash(git stash:*)",
			"Bash(git checkout -- :*)",
			"Bash(git checkout .:*)",
			"Bash(git restore:*)",
			"Bash(git clean:*)",
			"Bash(git cherry-pick:*)",
			"Bash(git rebase:*)",
			"Bash(reboot)",
			"Bash(shutdown:*)",
			"Bash(poweroff)",
			"Bash(halt)",
			"Bash(init:*)",
			"Bash(systemctl reboot:*)",
			"Bash(systemctl poweroff:*)",
			"Bash(systemctl halt:*)"
		]
	}
}
