# Vibe Development Environment Dockerfile
# Optimized base image for fast snapshot-based Docker image creation
# Build this once, save as @vibe-box snapshot, then reference in presets

FROM ubuntu:22.04

# Build arguments for flexibility
ARG USER_NAME=developer
ARG USER_UID=1000
ARG USER_GID=1000

# Avoid prompts from apt
ENV DEBIAN_FRONTEND=noninteractive

# Set locale to prevent warnings
ENV LANG=en_US.UTF-8
ENV LC_ALL=en_US.UTF-8
ENV LANGUAGE=en_US:en

# Install system packages + build essentials + common dev tools
RUN apt-get update && apt-get install -y \
    # Tini: minimal init system for proper zombie process reaping
    # Without this, zombie processes accumulate in containers
    tini \
    # Locale support (must come first)
    locales \
    # Core utilities from vibe preset
    tree \
    ripgrep \
    unzip \
    htop \
    # Essential tools
    curl \
    wget \
    git \
    git-lfs \
    ca-certificates \
    gnupg \
    # Process management
    supervisor \
    sudo \
    # Security tools
    ufw \
    fail2ban \
    unattended-upgrades \
    # Shell
    zsh \
    zsh-syntax-highlighting \
    # Python packages
    python3-pip \
    python3-dev \
    python3-venv \
    python3-psycopg2 \
    # Build essentials for native modules
    build-essential \
    gcc \
    g++ \
    make \
    pkg-config \
    libssl-dev \
    # Common dev utilities
    jq \
    vim \
    nano \
    tmux \
    procps \
    net-tools \
    iputils-ping \
    # For Playwright/Chromium dependencies (from official Playwright deps list)
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libatspi2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libasound2 \
    libpango-1.0-0 \
    libcairo2 \
    libwayland-client0 \
    libx11-6 \
    libxcb1 \
    libxext6 \
    libglib2.0-0 \
    # WebGL/WebGPU support - Mesa EGL/GL libraries for SwiftShader/SwANGLE backend
    # Without these, Chromium cannot initialize its graphics subsystem for WebGL
    libegl1 \
    libgl1-mesa-dri \
    libgles2-mesa \
    # Vulkan support for WebGPU and SwANGLE (software Vulkan via llvmpipe)
    libvulkan1 \
    mesa-vulkan-drivers \
    # Virtual framebuffer for headless display (required for some WebGL operations)
    xvfb \
    && locale-gen en_US.UTF-8 \
    && update-locale LANG=en_US.UTF-8 \
    && rm -rf /var/lib/apt/lists/*

# Create user early so we can install tools for them
RUN groupadd -g ${USER_GID} ${USER_NAME} || true && \
    useradd -m -u ${USER_UID} -g ${USER_GID} -s /bin/bash ${USER_NAME}

# Install Node.js via NVM (allows version management per project)
USER ${USER_NAME}
ENV NVM_DIR="/home/${USER_NAME}/.nvm"
ENV NVM_VERSION="v0.40.3"
ENV NODE_VERSION="22"

RUN mkdir -p $NVM_DIR && \
    curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/${NVM_VERSION}/install.sh | bash && \
    . $NVM_DIR/nvm.sh && \
    nvm install ${NODE_VERSION} && \
    nvm use ${NODE_VERSION} && \
    nvm alias default ${NODE_VERSION} && \
    echo "Node.js version: $(node --version)" && \
    echo "npm version: $(npm --version)"

# Add NVM to PATH
ENV PATH="${NVM_DIR}/versions/node/v${NODE_VERSION}/bin:${PATH}"

USER root

# Install Python (latest stable from deadsnakes)
# Filters to stable versions only (3.10-3.14), excludes nightly builds (3.15+)
RUN apt-get update && apt-get install -y \
    software-properties-common \
    curl \
    && add-apt-repository ppa:deadsnakes/ppa \
    && apt-get update \
    # Find latest stable Python (3.10-3.14 range, excludes 3.15+ nightly)
    && PYTHON_STABLE=$(apt-cache search 'python3\.[0-9]+$' | grep -oP 'python3\.1[0-4]' | sort -V | tail -1) \
    && echo "Installing Python: ${PYTHON_STABLE}" \
    && apt-get install -y \
    ${PYTHON_STABLE} \
    ${PYTHON_STABLE}-venv \
    ${PYTHON_STABLE}-dev \
    && rm -rf /var/lib/apt/lists/* \
    # Set as default
      && update-alternatives --install /usr/bin/python3 python3 /usr/bin/${PYTHON_STABLE} 1 \
      && ln -sf /usr/bin/python3 /usr/bin/python \
      # Install pip via get-pip.py (works for all Python versions)
      && curl -sS https://bootstrap.pypa.io/get-pip.py | ${PYTHON_STABLE}

# Install Ansible (use ansible-core for compatibility with newer Python)
# ansible-core 2.17.x is compatible with Python 3.10-3.13
RUN pip3 install --no-cache-dir ansible-core

# Install Rust and Cargo as developer user (latest stable)
USER ${USER_NAME}
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --default-toolchain stable --profile default \
    && . $HOME/.cargo/env \
    && rustup component add rustfmt clippy rust-analyzer \
    && echo "Rust version: $(rustc --version)" \
    && echo "Cargo version: $(cargo --version)"

# Install common Cargo tools as developer user
RUN . $HOME/.cargo/env && cargo install \
    cargo-watch \
    cargo-edit \
    cargo-audit \
    cargo-outdated

# Switch back to root for remaining setup
USER root

# Make Rust available in PATH for developer user
ENV PATH="/home/${USER_NAME}/.cargo/bin:${PATH}"
ENV CARGO_HOME="/home/${USER_NAME}/.cargo"
ENV RUSTUP_HOME="/home/${USER_NAME}/.rustup"

# Install NPM packages globally as developer user (using NVM)
USER ${USER_NAME}
RUN . $NVM_DIR/nvm.sh && npm install -g \
    @anthropic-ai/claude-code \
    @google/gemini-cli \
    @openai/codex \
    playwright \
    prettier \
    eslint \
    typescript \
    ts-node \
    tsx \
    nodemon \
    npm-check-updates

# Install Playwright browsers as developer user
# - chromium: Default browser (WebGL works on all architectures)
# - chrome: Chrome for Testing (WebGL + WebGPU, x86_64 only - not available for ARM64)
RUN . $NVM_DIR/nvm.sh && \
    npx playwright install chromium && \
    ([ "$(uname -m)" = "x86_64" ] && npx playwright install chrome || echo "Skipping Chrome for Testing (not available for $(uname -m))")

# Switch to root for system-level Playwright deps
USER root
RUN apt-get update && \
    . /home/${USER_NAME}/.nvm/nvm.sh && \
    npx playwright install-deps chromium && \
    ([ "$(uname -m)" = "x86_64" ] && npx playwright install-deps chrome || true) && \
    rm -rf /var/lib/apt/lists/*

# Install Python packages (including Playwright)
RUN pip3 install --no-cache-dir \
    playwright \
    pytest \
    pytest-playwright

# Set up working directory
WORKDIR /workspace

# Ensure shell history directory exists and is owned by the developer user
RUN mkdir -p /home/${USER_NAME}/.shell_history && \
    chown ${USER_UID}:${USER_GID} /home/${USER_NAME}/.shell_history && \
    chmod 700 /home/${USER_NAME}/.shell_history

# Fix shell history permissions dynamically (handles UID/GID remapping at runtime)
RUN cat <<'EOF' >/etc/profile.d/vm-shell-history.sh
mkdir -p "$HOME/.shell_history"
if [ -d "$HOME/.shell_history" ]; then
    chown "$(id -u)":"$(id -g)" "$HOME/.shell_history" 2>/dev/null || true
    chmod 700 "$HOME/.shell_history" 2>/dev/null || true
fi
EOF

# Set workspace ownership (user already created above)
RUN mkdir -p /workspace && \
    chown -R ${USER_NAME}:${USER_NAME} /workspace

# Set up aliases/env for both bash and zsh shells
RUN for rc in /home/${USER_NAME}/.bashrc /home/${USER_NAME}/.zshrc; do \
        echo 'alias claudeyolo="claude --dangerously-skip-permissions"' >> "$rc"; \
        echo 'alias geminiyolo="GEMINI_API_KEY=${GEMINI_API_KEY:-} gemini"' >> "$rc"; \
        echo 'alias codexyolo="codex --dangerously-bypass-approvals-and-sandbox"' >> "$rc"; \
        echo 'export PATH="$PATH:/home/${USER_NAME}/.local/bin:/root/.cargo/bin"' >> "$rc"; \
        echo 'export CARGO_HOME="/root/.cargo"' >> "$rc"; \
        echo 'export RUSTUP_HOME="/root/.rustup"' >> "$rc"; \
    done

# Ensure aliases survive vm shell template regeneration
RUN echo 'alias claudeyolo="claude --dangerously-skip-permissions"' >> /etc/zsh/zshrc && \
    echo 'alias claudeyolo="claude --dangerously-skip-permissions"' >> /etc/bash.bashrc

# Set timezone
ENV TZ=America/Los_Angeles
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

# Environment variables for development
ENV NODE_ENV=development \
    PYTHONDONTWRITEBYTECODE=1 \
    PLAYWRIGHT_BROWSERS_PATH=/home/${USER_NAME}/.cache/ms-playwright \
    # Virtual display for headless WebGL (xvfb runs on :99)
    DISPLAY=:99 \
    # Ensure Mesa uses llvmpipe for software rendering
    LIBGL_ALWAYS_SOFTWARE=1

# Set architecture-aware Vulkan ICD path at runtime
# This handles both x86_64 and aarch64 builds
RUN ARCH=$(uname -m) && \
    echo "export VK_ICD_FILENAMES=/usr/share/vulkan/icd.d/lvp_icd.${ARCH}.json" >> /etc/profile.d/vulkan-icd.sh && \
    chmod +x /etc/profile.d/vulkan-icd.sh

# Add labels for metadata
LABEL org.opencontainers.image.title="Vibe Development Box" \
      org.opencontainers.image.description="Optimized base image with latest stable Node.js, Python, Rust, Playwright, and AI CLI tools" \
      org.opencontainers.image.version="1.0" \
      com.vm-tool.preset="vibe" \
      com.vm-tool.snapshot-name="vibe-box" \
      com.vm-tool.auto-update="true"

# Switch to developer user
USER ${USER_NAME}

# Set default shell to bash
SHELL ["/bin/bash", "-c"]

# Healthcheck to ensure the container is ready
# Source environment to make NVM/Cargo available, check basic tools only
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD bash -c 'source ~/.nvm/nvm.sh && source ~/.cargo/env 2>/dev/null && command -v node && command -v python3 || exit 1'

# Use tini as init to properly reap zombie processes
ENTRYPOINT ["/usr/bin/tini", "--"]

# Default command
CMD ["/bin/bash"]
