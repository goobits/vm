{
  "name": "@goobits/vm",
  "version": "1.2.1",
  "description": "Beautiful development VMs with one command. Vagrant + Ansible + gorgeous terminals.",
  "type": "module",
  "bin": {
    "vm": "./vm"
  },
  "files": [
    "vm",
    "vm.yaml",
    "vm.schema.yaml",
    "install.sh",
    "providers/",
    "configs/",
    "lib/",
    "test/",
    "rust/",
    "bin/",
    "scripts/"
  ],
  "scripts": {
    "test": "cd rust && cargo test",
    "validate": "./vm validate || echo 'Validation requires vm binary'",
    "postinstall": "chmod +x vm install.sh",
    "sync-versions": "cd rust && cargo run --bin version-sync sync",
    "check-versions": "cd rust && cargo run --bin version-sync check",
    "version": "npm run sync-versions && git add ."
  },
  "keywords": [
    "vagrant",
    "docker",
    "vm",
    "development",
    "ansible",
    "ubuntu",
    "claude-code",
    "dev-environment"
  ],
  "author": "goobits",
  "license": "MIT",
  "peerDependencies": {
    "vagrant": "*",
    "virtualbox": "*"
  },
  "peerDependenciesMeta": {
    "vagrant": {
      "optional": true
    },
    "virtualbox": {
      "optional": true
    }
  },
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0"
}
