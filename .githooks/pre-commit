#!/bin/bash
#
# Pre-commit hook for VM project
#
# Runs fast code quality checks:
# 1. rustfmt - code formatting (auto-fixes)
# 2. clippy - linting
#
# Tests run in CI, not here (too slow for commit feedback loop)
#
# To bypass: git commit --no-verify
#

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# Ensure we're in the project root
cd "$(git rev-parse --show-toplevel)"

# Check if we have Rust code changes
RUST_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.rs$' || true)

if [ -z "$RUST_FILES" ]; then
    exit 0
fi

echo -e "${BLUE}üîç Pre-commit: checking ${NC}$(echo "$RUST_FILES" | wc -l | tr -d ' ')${BLUE} Rust file(s)${NC}"

# Source Cargo environment
[ -f "$HOME/.cargo/env" ] && source "$HOME/.cargo/env"

cd rust

# 1. Format check (auto-fix)
if ! cargo fmt --all -- --check 2>/dev/null; then
    echo -e "${YELLOW}   Formatting...${NC}"
    cargo fmt --all
    cd ..
    echo "$RUST_FILES" | while read -r file; do
        [ -f "$file" ] && git add "$file"
    done
    cd rust
fi

# 2. Clippy (this also compiles the code)
if ! cargo clippy --workspace --lib --bins -- -D warnings; then
    echo -e "${RED}‚ùå Clippy failed${NC}"
    exit 1
fi

echo -e "${GREEN}‚úÖ Ready to commit${NC}"
